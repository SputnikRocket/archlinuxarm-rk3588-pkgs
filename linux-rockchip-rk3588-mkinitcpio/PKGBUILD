pkgname="linux-rockchip-rk3588-mkinitcpio"
pkgver="1.0.0"
pkgrel="1"
pkgdesc="mkinitcpio preset for the linux-rockchip-rk3588 kernel"
arch=("aarch64")
depends=("mkinitcpio" "linux-image-5.10.160-rockchip")
license=("custom")
source=("linux-rockchip-rk3588.preset")
sha512sums=("SKIP")

package() {
  mkdir -p "${pkgdir}/etc/mkinitcpio.d"
  cp "${srcdir}/linux-rockchip-rk3588.preset" "${pkgdir}/etc/mkinitcpio.d/linux-rockchip-rk3588.preset"
  chmod 644 "${pkgdir}/etc/mkinitcpio.d/linux-rockchip-rk3588.preset"
}

